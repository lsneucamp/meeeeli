{
    "presets": ["next/babel"],
    "plugins": [
        [
            "module-resolver",
            {
                "root": ["./"],
                "alias": {
                    "@Components": "./src/Components",
                    "@Pages": "./pages",
                    "@Server": "./server",
                    "@Static": "./public/static",
                    "@Styled": "./src/Styled"
                }
            }
        ],
        [
            "babel-plugin-styled-components",
            {
                "ssr": true
            }
        ]
    ]
}
